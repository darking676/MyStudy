		<form action="insert.jsp" onsubmit="return inputCheck();">
		<div>
			<label for="name">이름</label>
			<input type="text" name="name" id="name"/>
		</div>
		<div>
			<label for="pay">금액</label>
			<input type="number" min="0" value="0" name="pay" id="pay"/>
